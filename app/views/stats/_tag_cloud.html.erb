<% if tag_cloud.tags.size < 1 %>
  <%= t('stats.no_tags_available') %>
<% else %>
  <% tag_cloud.tags.each do |tag| %>
    <% tag_style = "font-size: #{tag_cloud.relative_font_size(tag)}pt" %>
    <% tag_title = "tag.count.to_s #{t('common.actions_midsentence', count: tag.count)}" %>

    <%= link_to tag.name, tag_path(tag.name), style: tag_style, title: tag_title -%>
  <% end -%>
<% end -%>